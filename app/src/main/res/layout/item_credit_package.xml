<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
      android:background="@drawable/drawable_verify_background_white_radius"
    android:padding="12dp">

    <!-- Main horizontal item -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginVertical="6dp">

        <!-- Coin image with badge -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp">

            <ImageView
                android:id="@+id/imgCoins"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/verifylabs_circle_square_icon"
                android:contentDescription="Coins icon" />

            <TextView
                android:id="@+id/tvBadge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|end"
                android:visibility="gone"
                android:background="@drawable/drawable_verify_background_btn_blue"
                android:text="250"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="2dp"/>
        </FrameLayout>

        <!-- Credit info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCreditsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000 Credits"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$6.99"
                android:textSize="16sp"
                android:textColor="@color/txtBlue" />
        </LinearLayout>

        <!-- Buy button aligned to the right -->
        <LinearLayout
            android:id="@+id/btnBuyCredits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="30dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingEnd="30dp"
            android:background="@drawable/drawable_buy_in_app_purchase"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tvBuyCredits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

    <!-- Extra text below the main item -->
    <TextView
        android:id="@+id/tvExtraText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100  VerifyLabs Credits"
        android:textColor="@color/shape_stroke"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>
</LinearLayout>
