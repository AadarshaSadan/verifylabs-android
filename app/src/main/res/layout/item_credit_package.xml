<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Product Icon (iOS Style) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@color/nav_overlay_color_pressed"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/imgCoins"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/verifylabs_circle_square_icon"
                    android:scaleType="fitCenter"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Product details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCreditsname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000 Credits"
                    android:textColor="@color/colorBlack"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="$6.99"
                    android:textColor="@color/txtBlue"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Capsule Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnBuyCredits"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="80dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/txtBlue"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <TextView
                    android:id="@+id/tvBuyCredits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="16dp"
                    android:text="Buy"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvExtraText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Product description goes here"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
