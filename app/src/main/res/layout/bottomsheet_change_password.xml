<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_change_password_sheet">

    <!-- Drag Handle -->
    <View
        android:id="@+id/dragHandle"
        android:layout_width="36dp"
        android:layout_height="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_drag_handle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Cancel Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/cancel"
        android:textColor="@color/header_text"
        android:textSize="12sp"
        android:minWidth="0dp"
        android:paddingHorizontal="16dp"
        app:backgroundTint="@color/colorWhite"
        app:cornerRadius="24dp"
        android:stateListAnimator="@null"
        android:elevation="1dp"
        app:elevation="1dp"
        app:strokeWidth="0.2dp"
        app:strokeColor="@color/colorWhiteGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dragHandle"
        style="@style/Widget.MaterialComponents.Button"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_password_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/header_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnCancel"
        app:layout_constraintBottom_toBottomOf="@id/btnCancel"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/btnCancel"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingBottom="40dp">

            <!-- Current Password Section -->
            <TextView
                android:id="@+id/tvCurrentPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_password_label"
                android:textSize="14sp"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="16dp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCurrentPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/current_password_hint"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/account_card_bg"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:hintTextColor="@color/secondary_text"
                app:layout_constraintTop_toBottomOf="@id/tvCurrentPasswordLabel">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCurrentPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/header_text"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- New Password Section -->
            <TextView
                android:id="@+id/tvNewPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_password_label"
                android:textSize="14sp"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="24dp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilCurrentPassword"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/new_password_hint"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/account_card_bg"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="0dp"
                app:boxCornerRadiusBottomEnd="0dp"
                app:hintTextColor="@color/secondary_text"
                app:layout_constraintTop_toBottomOf="@id/tvNewPasswordLabel">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/header_text"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:alpha="0.2"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/tilNewPassword"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/confirm_password_hint"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/account_card_bg"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxCornerRadiusTopStart="0dp"
                app:boxCornerRadiusTopEnd="0dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:hintTextColor="@color/secondary_text"
                app:layout_constraintTop_toBottomOf="@id/divider">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/header_text"
                    android:textSize="16sp"
                    android:paddingVertical="12dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password Requirements -->
            <LinearLayout
                android:id="@+id/llRequirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="4dp"
                app:layout_constraintTop_toBottomOf="@id/tilConfirmPassword">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password_requirements"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_text"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvReq8Chars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/req_8_chars"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_circle"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tvReqUppercase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/req_uppercase"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_circle"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tvReqNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/req_number"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_circle"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tvReqMatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/req_match"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_circle"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <!-- Change Password Button -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/llRequirements">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/change_password_button"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/account_card_bg"
                    app:cornerRadius="12dp"
                    android:enabled="false"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone" />
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
