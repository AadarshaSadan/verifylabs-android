<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_rounded_top">

    <!-- Drag Handle -->
    <View
        android:id="@+id/dragHandle"
        android:layout_width="36dp"
        android:layout_height="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_drag_handle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Cancel Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Cancel"
        android:textColor="@color/colorBlack"
        android:textSize="17sp"
        android:minWidth="0dp"
        android:paddingHorizontal="16dp"
        app:backgroundTint="@color/app_background_3"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dragHandle"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnCancel"
        app:layout_constraintBottom_toBottomOf="@id/btnCancel"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/btnCancel"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingBottom="40dp">

            <!-- Current Password Section -->
            <TextView
                android:id="@+id/tvCurrentPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Password"
                android:textSize="14sp"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCurrentPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Enter current password"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/app_background_3"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:hintTextColor="@color/secondary_text"
                app:layout_constraintTop_toBottomOf="@id/tvCurrentPasswordLabel">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCurrentPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:paddingVertical="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- New Password Section -->
            <TextView
                android:id="@+id/tvNewPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:textSize="14sp"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilCurrentPassword"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Enter new password"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/app_background_3"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="0dp"
                app:boxCornerRadiusBottomEnd="0dp"
                app:hintTextColor="@color/secondary_text"
                app:layout_constraintTop_toBottomOf="@id/tvNewPasswordLabel">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:paddingVertical="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorWhiteGray"
                android:alpha="0.2"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/tilNewPassword"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm new password"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/app_background_3"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxCornerRadiusTopStart="0dp"
                app:boxCornerRadiusTopEnd="0dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:hintTextColor="@color/secondary_text"
                app:layout_constraintTop_toBottomOf="@id/divider">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:paddingVertical="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password Requirements -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvRequirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/app_background_3"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/tilConfirmPassword">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password Requirements"
                        android:textSize="13sp"
                        android:textColor="@color/secondary_text"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tvReq8Chars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  At least 8 characters"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_circle"
                        android:drawableTint="@color/secondary_text"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvReqUppercase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  At least one uppercase letter"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_circle"
                        android:drawableTint="@color/secondary_text"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvReqNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  At least one number"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_circle"
                        android:drawableTint="@color/secondary_text"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvReqMatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Passwords match"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_circle"
                        android:drawableTint="@color/secondary_text"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Change Password Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:text="Change Password"
                android:textColor="@color/colorWhiteGray"
                android:textSize="17sp"
                android:textStyle="bold"
                app:backgroundTint="@color/colorBackground2"
                app:cornerRadius="12dp"
                android:enabled="false"
                app:layout_constraintTop_toBottomOf="@id/cvRequirements"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
