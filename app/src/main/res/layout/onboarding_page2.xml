<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="15dp">

    <!-- Logo -->

    <!-- First background view -->

    <!-- Space between -->

    <ImageView
        android:id="@+id/imgOnboarding"
        android:layout_width="250dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:contentDescription="Onboarding Logo"
        android:scaleType="centerInside"
        android:src="@drawable/only_verifylabs_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewTop"
        android:layout_width="307dp"
        android:layout_height="245dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/drawable_drawable_card_onboarding_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgOnboarding" />

    <Space
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintTop_toBottomOf="@id/viewTop"
        app:layout_constraintBottom_toTopOf="@id/viewBottom" />

    <!-- Second background view -->
    <View
        android:id="@+id/viewBottom"
        android:layout_width="311dp"
        android:layout_height="274dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/drawable_verify_background_green_radius_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTop" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="@color/app_background_2"
        android:text="Reveling\n Deepfakes"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/viewTop"
        app:layout_constraintStart_toStartOf="@+id/viewTop"
        app:layout_constraintTop_toTopOf="@+id/viewTop" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="39dp"
        android:layout_height="41dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewTop"
        app:layout_constraintEnd_toEndOf="@+id/viewTop"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="@+id/viewTop"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.99"
        app:srcCompat="@drawable/cross_verify_labs" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewBottom"
        app:layout_constraintEnd_toEndOf="@+id/viewBottom"
        app:layout_constraintHorizontal_bias="0.918"
        app:layout_constraintStart_toStartOf="@+id/viewBottom"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.683"
        app:srcCompat="@drawable/verifylabs_tick_icon_light_grey_rgb_2__traced___1_" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protecting \n People"
        android:textColor="@color/colorWhite"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/viewBottom"
        app:layout_constraintStart_toStartOf="@+id/viewBottom"
        app:layout_constraintTop_toTopOf="@+id/viewBottom"
        app:layout_constraintVertical_bias="0.198" />



</androidx.constraintlayout.widget.ConstraintLayout>
