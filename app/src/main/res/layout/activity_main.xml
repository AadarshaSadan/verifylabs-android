<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".presentation.MainActivity">

    <!-- AppBar -->
    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Fragment container -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/floatingBottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar" />

    <!-- Custom Floating Bottom Navigation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/floatingBottomNav"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/bottom_nav_margin"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    <LinearLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="5"
        android:background="@drawable/bg_floating_nav"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

            <!-- Home Button -->
            <LinearLayout
                android:id="@+id/navHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:padding="6dp"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iconHome"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/bottom_nav_color" />

                <TextView
                    android:id="@+id/textHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_home"
                    android:textColor="@color/bottom_nav_color"
                    android:textSize="10sp"/>
            </LinearLayout>

            <!-- Media Button -->
            <LinearLayout
                android:id="@+id/navMedia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iconMedia"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_media"
                    app:tint="@color/bottom_nav_color" />
                <TextView
                    android:id="@+id/textMedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_media"
                    android:textColor="@color/bottom_nav_color"
                    android:textSize="10sp"/>
            </LinearLayout>

            <!-- Audio Button -->
            <LinearLayout
                android:id="@+id/navAudio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iconAudio"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_audio_nav"
                    app:tint="@color/bottom_nav_color" />
                <TextView
                    android:id="@+id/textAudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_audio"
                    android:textColor="@color/bottom_nav_color"
                    android:textSize="10sp"/>
            </LinearLayout>

            <!-- History Button -->
            <LinearLayout
                android:id="@+id/navHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iconHistory"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_history"
                    app:tint="@color/bottom_nav_color" />
                <TextView
                    android:id="@+id/textHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_history"
                    android:textColor="@color/bottom_nav_color"
                    android:textSize="10sp"/>
            </LinearLayout>

            <!-- Settings Button -->
            <LinearLayout
                android:id="@+id/navSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iconSettings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/bottom_nav_color" />
                <TextView
                    android:id="@+id/textSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_settings"
                    android:textColor="@color/bottom_nav_color"
                    android:textSize="10sp"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
