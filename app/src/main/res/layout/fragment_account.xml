<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ios_settings_background"
    android:fitsSystemWindows="true"
    tools:context=".presentation.settings.FragmentAccount">
    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/ios_settings_background">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            app:tint="@color/system_blue"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvTitleAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_title"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Info -->
            <TextView
                android:id="@+id/tvProfileInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_information_title"
                android:textColor="#6E6E73"
                android:textSize="13sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Username -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_user"
                            app:tint="@color/vl_green" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvUsernameLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/username_label"
                                android:textColor="#8E8E93"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tvUsernameValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="17sp"
                                android:textColor="@color/colorBlack"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvUsernameNote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cannot_be_changed_note"
                            android:textSize="12sp"
                            android:textColor="#8E8E93"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorWhiteGray"
                        android:alpha="0.2"/>

                    <!-- Full Name -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_full_name"
                            app:tint="@color/vl_green" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvFullNameLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/full_name_label"
                                android:textColor="@color/secondary_text"
                                android:textSize="12sp"/>

                            <EditText
                                android:id="@+id/etFullNameValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="17sp"
                                android:textColor="@color/colorBlack"
                                android:background="@null"
                                android:padding="0dp"
                                android:inputType="textPersonName"
                                android:maxLines="1"
                                android:imeOptions="actionDone"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvFullNameNote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/save_action"
                            android:textSize="12sp"
                            android:textColor="@color/vl_green"
                            android:visibility="gone"/>
                        
                        <ProgressBar
                            android:id="@+id/pbFullName"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:visibility="gone"/>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorWhiteGray"
                        android:alpha="0.2"/>

                    <!-- Email -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_email"
                            app:tint="@color/vl_green"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvEmailLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/email_address_label"
                                android:textColor="@color/secondary_text"
                                android:textSize="12sp"/>

                            <EditText
                                android:id="@+id/etEmailValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="17sp"
                                android:textColor="@color/colorBlack"
                                android:background="@null"
                                android:padding="0dp"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:imeOptions="actionDone"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvEmailNote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/save_action"
                            android:textSize="12sp"
                            android:textColor="@color/vl_green"
                            android:visibility="gone"/>
                            
                        <ProgressBar
                            android:id="@+id/pbEmail"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:visibility="gone"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Security -->
            <TextView
                android:id="@+id/tvSecurityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/security_title"
                android:textColor="#6E6E73"
                android:textSize="13sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:id="@+id/btnChangePassword"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_change_password"
                        app:tint="@color/system_blue"/>

                    <TextView
                        android:id="@+id/tvChangePassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/change_password_action"
                        android:textSize="17sp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Account Actions -->
            <TextView
                android:id="@+id/tvAccountActionsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_actions_title"
                android:textColor="#6E6E73"
                android:textSize="13sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:id="@+id/btnLogout"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_logout"
                        app:tint="@color/system_orange" />

                    <TextView
                        android:id="@+id/tvLogout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/logout_action"
                        android:textSize="17sp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Danger Zone -->
            <TextView
                android:id="@+id/tvDangerZoneTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/danger_zone_title"
                android:textColor="#6E6E73"
                android:textSize="13sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/btnDeleteAccount"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_delete"
                        app:tint="@color/system_red"/>

                    <TextView
                        android:id="@+id/tvDeleteAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delete_account_action"
                        android:textSize="17sp"
                        android:textColor="@color/system_red"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
