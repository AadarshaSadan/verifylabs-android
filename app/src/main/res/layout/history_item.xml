<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="4dp"
    android:paddingVertical="4dp"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/history_item_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginEnd="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_thumbnail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/verifylabs_logo"
            android:clipToOutline="true"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Corner10dp" />

        <!-- Text Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_human_generated"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/header_text" />

            <TextView
                android:id="@+id/item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24/12/2025, 7:24 pm"
                android:textColor="@color/secondary_text"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- AI Score -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ai_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22%"
                android:textColor="#34C759"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ai_score_label"
                android:textColor="#8E8E93"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_cheveron_right"
        app:tint="#8E8E93" />

</LinearLayout>