<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:overScrollMode="always"
    android:background="@color/app_background_before_login"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="24dp"
        android:paddingLeft="24dp"
        android:gravity="center_horizontal">

        <!-- Top Icon / App Logo -->
        <androidx.cardview.widget.CardView
            android:id="@+id/imgAppIcon"
            android:layout_marginTop="50dp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:elevation="2dp"
            app:background="@drawable/verifylabs_logo"
            android:contentDescription="@string/app_icon"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/verifylabs_logo" />
        </androidx.cardview.widget.CardView>

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/welcome_back"
            android:textSize="24sp"
            android:textColor="@color/colorBlack"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSignInPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:text="@string/sign_in_to_continue_to_verifylabs"
            android:textColor="@color/verifylabs_dots_indicator"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <!-- Username -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:startIconTint="@null"
            android:hint="@string/username"
            app:startIconDrawable="@drawable/ic_user"
            app:hintTextColor="@color/colorBlack"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="16sp"
                android:hint="@string/username"
                android:background="@drawable/bg_text_input"
                android:textColor="@color/colorBlack"
                android:paddingStart="48dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:enabled="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:startIconTint="@null"
            android:hint="@string/password"
            app:startIconDrawable="@drawable/ic_password"
            app:endIconMode="password_toggle"
            app:hintTextColor="@color/colorBlack"
            app:hintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:hint="@string/password"
                android:background="@drawable/bg_text_input"
                android:textColor="@color/colorBlack"
                android:paddingStart="48dp"
                android:paddingEnd="60dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:enabled="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sign In Button -->
        <LinearLayout
            android:id="@+id/btnGetStarted"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/drawable_verify_background_btn_failed_likely_gray"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/tvSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN IN"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- Sign Up Prompt -->
        <LinearLayout
            android:id="@+id/btnCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/don_t_have_an_account"
                android:textSize="14sp"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_marginStart="5dp"
                android:id="@+id/tvSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up_here"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/txtGreen" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>