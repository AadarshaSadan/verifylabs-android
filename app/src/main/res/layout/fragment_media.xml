<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/media_scroll"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".presentation.media.MediaFragment">

    <LinearLayout
        android:id="@+id/media_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Select Media Button -->
        <LinearLayout
            android:id="@+id/btnSelectMedia"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/drawable_verify_background_green"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add_image"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Media Files"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- Media Preview with Overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <!-- Image Preview -->
            <ImageView
                android:id="@+id/imageViewMedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:background="@drawable/drawable_image_chooser"
                android:visibility="visible" />

            <!-- Video Preview -->
            <VideoView
                android:id="@+id/videoViewMedia"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- Audio Preview (simple icon) -->
            <LinearLayout
                android:id="@+id/audioContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/audioIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_media" />

                <TextView
                    android:id="@+id/audioFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audio File"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Overlay Image (tick / X / warning) -->
            <ImageView
                android:id="@+id/imageOverlay"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:alpha="0.7" />

        </FrameLayout>

        <!-- Status Message -->

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/layoutInfoStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtIdentifixation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:paddingTop="6dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="6dp"/>
                    <ImageView
                        android:id="@+id/imgIdentification"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>
            </RelativeLayout>

            <TextView
            android:id="@+id/textStatusMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:visibility="visible"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="8dp"
            android:gravity="center" />

        </LinearLayout>



        <!-- No credit Message -->

        <LinearLayout
            android:id="@+id/layoutNoCreditStatus"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_verify_background_orange"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="start"
                        android:src="@drawable/ic_no_credits"
                        android:layout_marginStart="16dp"/>

                    <TextView
                        android:id="@+id/txtNoCredit"
                        android:layout_width="wrap_content"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:text="Insufficient credits. Please upgrade or buy More."
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="6dp"/>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <!-- Verify / Done Button -->
        <LinearLayout
            android:id="@+id/btnAction"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/drawable_verify_background_green"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconAction"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_folder_add"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/textAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify Media"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>
