<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".presentation.audio.FragmentAudio">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/audio_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llCreditsInfo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Top small circle -->
            <View
                android:id="@+id/micPulsebtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/circle_mic_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/mic_timer"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/q3_icons"
                app:tint="@android:color/white"
                app:layout_constraintTop_toTopOf="@id/micPulsebtn"
                app:layout_constraintBottom_toBottomOf="@id/micPulsebtn"
                app:layout_constraintStart_toStartOf="@id/micPulsebtn"
                app:layout_constraintEnd_toEndOf="@id/micPulsebtn" />

            <!-- Pulsating Circle -->
            <View
                android:id="@+id/micPulse"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/mic_circle_bg"
                app:layout_constraintTop_toBottomOf="@id/micPulsebtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="24dp" />

            <!-- Mic Button -->
            <ImageView
                android:id="@+id/micButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_mic"
                android:contentDescription="@string/start_recording"
                app:tint="@android:color/white"
                app:layout_constraintTop_toTopOf="@id/micPulse"
                app:layout_constraintBottom_toBottomOf="@id/micPulse"
                app:layout_constraintStart_toStartOf="@id/micPulse"
                app:layout_constraintEnd_toEndOf="@id/micPulse" />

            <!-- Timer -->
            <TextView
                android:id="@+id/txtTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toBottomOf="@id/micPulse"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <!-- Status -->
            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/txtTimer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp" />

            <!-- No Credit Banner -->
            <LinearLayout
                android:id="@+id/layoutNoCreditStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/drawable_verify_background_btn_failed_likely_red"
                android:padding="12dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/txtStatus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_cloud_cross"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No credits remaining"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Verification Result (Hidden until done) -->
            <LinearLayout
                android:id="@+id/layoutInfoStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/layoutNoCreditStatus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/imageOverlay"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/txtIdentifixation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Result"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/textStatusMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Audio Analysis Chart -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAudioAnalysis"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/layoutInfoStatus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.verifylabs.ai.presentation.audio.AudioAnalysisChart
                        android:id="@+id/audioAnalysisChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Audio Analysis"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/header_text"
                        android:layout_gravity="top|start"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp" />

                    <LinearLayout
                        android:id="@+id/layoutAnalysisPlaceholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_audio" 
                            android:alpha="0.5"
                            app:tint="@color/secondary_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Record audio to see analysis"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp"
                            android:alpha="0.7"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </FrameLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Credits Bar (Always visible) -->
    <include
        layout="@layout/layout_credits_remaining"
        android:id="@+id/llCreditsInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnGuidelines"/>

    <!-- Guidelines Link -->
    <LinearLayout
        android:id="@+id/btnGuidelines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_info"
            app:tint="#757575" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best results guidelines"
            android:textColor="#757575"
            android:textSize="12sp"
            android:layout_marginStart="4dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>