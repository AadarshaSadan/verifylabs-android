<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".presentation.audio.FragmentAudio">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/audio_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llCreditsInfo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Top small circle -->
            <View
                android:id="@+id/micPulsebtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/circle_mic_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/mic_timer"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/q3_icons"
                app:tint="@android:color/white"
                app:layout_constraintTop_toTopOf="@id/micPulsebtn"
                app:layout_constraintBottom_toBottomOf="@id/micPulsebtn"
                app:layout_constraintStart_toStartOf="@id/micPulsebtn"
                app:layout_constraintEnd_toEndOf="@id/micPulsebtn" />

            <!-- Pulsating Circle -->
            <View
                android:id="@+id/micPulse"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/mic_circle_bg"
                app:layout_constraintTop_toBottomOf="@id/micPulsebtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="24dp" />

            <!-- Mic Button -->
            <ImageView
                android:id="@+id/micButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_mic"
                android:contentDescription="@string/start_recording"
                app:tint="@android:color/white"
                app:layout_constraintTop_toTopOf="@id/micPulse"
                app:layout_constraintBottom_toBottomOf="@id/micPulse"
                app:layout_constraintStart_toStartOf="@id/micPulse"
                app:layout_constraintEnd_toEndOf="@id/micPulse" />

            <!-- Analyzing State (Blue Circle + White Spinner) -->
            <FrameLayout
                android:id="@+id/layoutAnalyzing"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                android:elevation="10dp"
                app:layout_constraintTop_toBottomOf="@id/micPulsebtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="24dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_blue_solid" />

                <ProgressBar
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:indeterminateTint="@android:color/white" />
            </FrameLayout>

            <!-- Timer -->
            <TextView
                android:id="@+id/txtTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/timer_placeholder"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toBottomOf="@id/micPulse"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <!-- No Credit Banner -->
            <LinearLayout
                android:id="@+id/layoutNoCreditStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/drawable_verify_background_btn_failed_likely_red"
                android:padding="12dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/txtTimer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_cloud_cross"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_credits_remaining"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Verification Result Container -->
            <LinearLayout
                android:id="@+id/layoutResultsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toBottomOf="@id/layoutNoCreditStatus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">

                <!-- Result Card -->
                <LinearLayout
                    android:id="@+id/cardResultStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_result_card_green"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:id="@+id/imgResultIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_check_circle" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtResultTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="@string/verification_failed_title"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txtResultMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lineSpacingExtra="4dp"
                            android:text="@string/human_verification_result_desc"
                            android:textAlignment="center"
                            android:textColor="@color/result_text_green"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Action Buttons Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnReset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reset_button"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#424242"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@android:color/white"
                        app:cornerRadius="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnShowAnalysis"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="48dp"
                        android:text="@string/show_analysis_button"
                        android:textAllCaps="false"
                        android:textColor="#2196F3"
                        app:strokeColor="#2196F3"
                        app:strokeWidth="1dp"
                        app:icon="@drawable/ic_chart_line"
                        app:iconTint="#2196F3"
                        app:iconGravity="textStart"
                        app:cornerRadius="12dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Stats Row -->
                <LinearLayout
                    android:id="@+id/layoutStatsRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/avg_label"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text" />

                    <TextView
                        android:id="@+id/txtAvgValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/value_placeholder"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/min_label"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text" />

                    <TextView
                        android:id="@+id/txtMinValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/value_placeholder"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/max_label"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text" />

                    <TextView
                        android:id="@+id/txtMaxValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/value_placeholder"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <!-- Audio Analysis Chart -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAudioAnalysis"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="4:3"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/layoutResultsContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.verifylabs.ai.presentation.audio.AudioAnalysisChart
                        android:id="@+id/audioAnalysisChart"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/audio_analysis_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/header_text"
                        android:layout_gravity="top|start"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp" />

                    <LinearLayout
                        android:id="@+id/layoutAnalysisPlaceholder"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_audio" 
                            android:alpha="0.5"
                            app:tint="@color/secondary_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/record_audio_prompt"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp"
                            android:alpha="0.7"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </FrameLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Credits Bar (Always visible) -->
    <include
        layout="@layout/layout_credits_remaining"
        android:id="@+id/llCreditsInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnGuidelines"/>

    <!-- Guidelines Link -->
    <LinearLayout
        android:id="@+id/btnGuidelines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_info"
            app:tint="#757575" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/best_results_guidelines_link"
            android:textColor="#757575"
            android:textSize="12sp"
            android:layout_marginStart="4dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>