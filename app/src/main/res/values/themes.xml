<resources>

    <!-- APP THEME -->
    <style name="Theme.Verifylabs" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:windowBackground">@color/app_background</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/app_background</item>
        <item name="android:navigationBarColor">@color/app_background</item>
        <item name="android:windowLightStatusBar">true</item> <!-- dark icons for light background -->

        <!-- Text colors -->
        <item name="android:textColor">@color/statusTextDark</item>
    </style>

    <!-- NAVIGATION BAR THEME -->

    <style name="NavBarTheme" parent="ThemeOverlay.MaterialComponents">
        <item name="itemRippleColor">@null</item> <!-- removes ripple -->
    </style>


    <!-- CUSTOM BOTTOM NAVIGATION VIEW -->
    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavText</item>
    </style>

    <style name="BottomNavText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- CUSTOM TEXT INPUT -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">none</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- FULLSCREEN BOTTOM SHEET DIALOG -->
    <style name="FullScreenBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/FullScreenDialogStyle</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/white</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_peekHeight">0dp</item>
    </style>


<!--    <style name="CustomTabTextStyle" parent="TextAppearance.MaterialComponents.Tab">-->
<!--        <item name="android:textSize">12sp</item>  &lt;!&ndash; adjust size &ndash;&gt;-->
<!--    </style>-->

    <style name="TabTextSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.Corner10dp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>


    <style name="RoundedImageView" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Corner12dp" parent="">
        <item name="cornerSize">12dp</item>
    </style>

    <!-- CUSTOM ALERT DIALOG (iOS Style) -->
    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@color/vl_onboarding_background</item>
        <item name="shapeAppearanceOverlay">@style/CustomAlertShape</item>
    </style>

    <style name="CustomAlertShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>
</resources>
