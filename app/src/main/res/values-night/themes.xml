<resources>
    <!-- APP THEME (Dark Mode) -->
    <style name="Theme.Verifylabs" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:windowBackground">@color/app_background</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/app_background</item>
        <item name="android:navigationBarColor">@color/app_background</item>
        <item name="android:windowLightStatusBar">false</item> <!-- light icons for dark background -->

        <!-- Text colors -->
        <item name="android:textColor">@color/statusTextDark</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/app_background</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_peekHeight">0dp</item>
    </style>
</resources>
